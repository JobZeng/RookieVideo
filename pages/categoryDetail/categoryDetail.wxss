/* pages/categoryDetail/categoryDetail.wxss */

.introduce-wrapper{
  background-color: #333;
  background-position: center;
  background-size: 100%;
}
.introduce {
  background-color: rgba(0, 0, 0, 0.3);
  width: 100%;
  height: 200px;
  display: flex;
  flex-direction: column;
  justify-content: space-evenly;
  align-items: center;
}
.introduce text{
  text-align: center;
  font-size: 12px;
  color: #fff;
  font-weight: bold;
}
.introduce-content text{
  display: block; 
}
.introduce .name{
  font-size: medium;
  margin-bottom: 10px;
}
.pick-txt {
  padding: 0 10rpx;
  display: inline-block;
  border: 2rpx solid #fff;
  border-radius: 4px;
  height: 20px;
  line-height: 20px;
}